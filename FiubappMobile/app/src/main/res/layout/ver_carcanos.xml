<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout android:id="@+id/header_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:background="#ff2ec7e8">

        <ImageView android:src="@drawable/ic_arrow"
            android:id="@+id/back_search"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10dip"/>

        <TextView android:id="@+id/profile_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:layout_toRightOf="@+id/back_search"
            android:text="@string/companerosCercanos"
            android:gravity="center_vertical|left|right"
            android:paddingLeft="10dp"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lllMapa"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_search">

        <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_alignEnd="@+id/btnActualizar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnActualizar"
            android:layout_alignParentTop="true" />

        <Button android:id="@+id/btnActualizar"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#ff2ec7e8"
            android:onClick="onClickActualizar"
            android:text="@string/actualizar"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</RelativeLayout>