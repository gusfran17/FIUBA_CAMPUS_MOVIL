<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.uba.fi.fiubappMobile.groups.Discussions.DiscussionActivity">

    <LinearLayout android:id="@+id/header_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:background="#ff2ec7e8">

        <ImageView android:src="@drawable/ic_arrow"
            android:id="@+id/btn_mssg_back"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10dip"/>

        <TextView android:id="@+id/lbl_discussion_header"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="#372c24"
            android:text=""
            android:gravity="center_vertical|left|right"
            android:paddingLeft="10dp"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lstVw_messages_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_profile">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lstVw_messages"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"/>

        <Button android:id="@+id/btnAddMessage"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#ff2ec7e8"
            android:text="@string/lblAddMessage"/>

    </LinearLayout>



</RelativeLayout>
