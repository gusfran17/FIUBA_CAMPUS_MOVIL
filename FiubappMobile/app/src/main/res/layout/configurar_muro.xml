<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wall_configuration">


        <TextView
            android:id="@+id/tv_wall_configuration"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/txt_wall_configuration" />

        <CheckBox  android:id="@+id/cb_wall_configuration"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/tv_wall_configuration"
            />




</RelativeLayout>