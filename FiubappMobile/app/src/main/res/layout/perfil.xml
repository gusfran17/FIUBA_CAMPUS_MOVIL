<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">

        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:background="#ff2ec7e8">

            <ImageView android:src="@drawable/no_image"
                android:id="@+id/back"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:onClick="onClickBack"
                android:layout_marginLeft="10dip"/>

            <TextView android:id="@+id/profile_name"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textColor="#372c24"
                android:text="Nombre"
                android:gravity="center_vertical|left|right" />

        </LinearLayout>

        <RelativeLayout android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/header">

            <ImageView android:src="@drawable/no_image"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginLeft="10dip"/>
        </RelativeLayout>

        <EditText android:id="@+id/header_name"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:paddingRight="10sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#372c24"
            android:text="Nombre"
            android:gravity="center_vertical|left|right"
            android:layout_below="@+id/header"
            android:layout_toRightOf="@+id/name"
            android:background="@null"/>

        <EditText android:id="@+id/header_lastname"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#372c24"
            android:text="Apellido"
            android:gravity="center_vertical|left|right"
            android:background="@null"
            android:layout_below="@+id/header_name"
            android:layout_toRightOf="@+id/name" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/header_name"
            android:src="@drawable/ic_editar"
            android:layout_below="@+id/header"
            android:id="@+id/edit_name"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@id/name"
            android:id="@+id/comments">

            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Comentarios personales"/>
            <EditText android:id="@+id/edit_comentarios"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Información personal"
                android:paddingBottom="10sp"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_editar"
                android:id="@+id/editButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birth">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:textColor="#372c24"
                    android:layout_weight="0.3"
                    android:text="Nacimiento"/>

                <EditText android:id="@+id/edit_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:inputType="text"
                    android:singleLine="true"
                    android:focusable="false"
                    android:background="@null"
                    android:onClick="onClickFechaNacimiento"
                    android:layout_weight="0.7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_sex">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_weight="0.3"
                    android:text="Sexo"/>

                <Spinner android:id="@+id/edit_sex"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:entries="@array/genders" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_email">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_weight="0.3"
                    android:text="Email"/>

                <EditText android:id="@+id/edit_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:inputType="text"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_weight="0.7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_tel">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_weight="0.3"
                    android:text="Teléfono"/>

                <EditText android:id="@+id/edit_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:inputType="text"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_weight="0.7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_ciudad">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_weight="0.3"
                    android:text="Ciudad"/>

                <EditText android:id="@+id/edit_ciudad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:inputType="text"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_weight="0.7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_nacionalidad">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_weight="0.3"
                    android:text="Nacionalidad"/>

                <EditText android:id="@+id/edit_nacionalidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:inputType="text"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_weight="0.7"/>
            </LinearLayout>

            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Carrera"/>
            <Spinner android:id="@+id/reg_carrera"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>