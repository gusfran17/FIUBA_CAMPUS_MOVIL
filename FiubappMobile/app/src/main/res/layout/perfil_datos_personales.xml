<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/allDatos"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="5dip"
            android:paddingBottom="5dip">

                <ImageView
                    android:src="@drawable/no_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dip"
                    android:id="@+id/image_profile"/>

                <EditText android:id="@+id/header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:paddingRight="10sp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#372c24"
                    android:text="Nombre"
                    android:gravity="center_vertical|left|right"
                    android:background="@null"
                    android:layout_toRightOf="@+id/image_profile"
                    android:layout_marginLeft="20dp"/>

                <EditText android:id="@+id/header_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#372c24"
                    android:text="Apellido"
                    android:gravity="center_vertical|left|right"
                    android:background="@null"
                    android:layout_toRightOf="@+id/image_profile"
                    android:layout_below="@id/header_name"
                    android:layout_marginLeft="20dp"/>

                <TextView android:id="@+id/header_padron"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#372c24"
                    android:gravity="center_vertical|left|right"
                    android:background="@null"
                    android:layout_toRightOf="@+id/image_profile"
                    android:layout_below="@id/header_lastname"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_editar"
                    android:id="@+id/edit_name"
                    android:layout_alignTop="@+id/header_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/headerComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff2ec7e8"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/TituloHeaderComentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25px"
                    android:textColor="#000000"
                    android:text="Comentarios"
                    android:layout_centerVertical="true"  />

                <ImageView
                    android:id="@+id/editButtonComm"
                    android:src="@drawable/ic_editar"
                    android:layout_marginRight="5px"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentComentarios"
                android:layout_below="@+id/headerComentarios">

                <LinearLayout android:focusable="true"
                    android:focusableInTouchMode="true" android:layout_width="0px"
                    android:layout_height="0px" />

                <EditText android:id="@+id/edit_comentarios"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="false" />

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/headerDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff2ec7e8"
            android:layout_below="@+id/contentComentarios"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/TituloHeaderDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="25px"
                android:textColor="#000000"
                android:text="InformaciÃ³n personal"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />

            <ImageView
                android:id="@+id/editButton"
                android:src="@drawable/ic_editar"
                android:layout_marginRight="5px"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contentDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerDatos"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout android:focusable="true"
                android:focusableInTouchMode="true" android:layout_width="0px"
                android:layout_height="0px" />

            <TextView
                android:id="@+id/TituloDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Nacimiento"
                android:layout_alignBaseline="@+id/edit_fecha"
                android:layout_alignBottom="@+id/edit_fecha" />

            <EditText android:id="@+id/edit_fecha"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15px"
                android:layout_marginTop="5px"
                android:focusable="false"
                android:enabled="false"
                android:layout_toRightOf="@+id/TituloDatos" />

            <TextView
                android:id="@+id/tvSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo"
                android:layout_alignBaseline="@+id/edit_sex"
                android:layout_alignBottom="@+id/edit_sex" />

            <Spinner android:id="@+id/edit_sex"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15px"
                android:layout_below="@+id/edit_fecha"
                android:layout_toRightOf="@+id/tvSexo"
                android:entries="@array/genders"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_alignBaseline="@+id/edit_email"
                android:layout_alignBottom="@+id/edit_email" />

            <EditText android:id="@+id/edit_email"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15px"
                android:layout_below="@+id/edit_sex"
                android:layout_toRightOf="@+id/tvEmail" />

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:layout_alignBaseline="@+id/edit_tel"
                android:layout_alignBottom="@+id/edit_tel" />

            <EditText android:id="@+id/edit_tel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15px"
                android:layout_below="@+id/edit_email"
                android:layout_toRightOf="@+id/tvTelefono" />

            <TextView
                android:id="@+id/tvCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:layout_alignBaseline="@+id/edit_ciudad"
                android:layout_alignBottom="@+id/edit_ciudad" />

            <EditText android:id="@+id/edit_ciudad"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15px"
                android:layout_below="@+id/edit_tel"
                android:layout_toRightOf="@+id/tvCiudad" />

            <TextView
                android:id="@+id/tvNacionalidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nacionalidad"
                android:layout_alignBaseline="@+id/edit_nacionalidad"
                android:layout_alignBottom="@+id/edit_nacionalidad" />

            <EditText android:id="@+id/edit_nacionalidad"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15px"
                android:layout_below="@+id/edit_ciudad"
                android:layout_toRightOf="@+id/tvNacionalidad" />


        </RelativeLayout>


    </RelativeLayout>
</ScrollView>