<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/message_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d_job_header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/edtvw_message"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="15px"
            android:layout_marginTop="5px"/>

        <ImageView
            android:id="@+id/img_upload"
            android:src="@drawable/ic_upload"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/edtvw_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtvw_message"
            android:layout_toRightOf="@+id/img_upload"
            android:textColor="#FFFFFF"
            android:layout_alignBottom="@+id/img_upload"
            android:text="@string/lbl_upload"
            android:gravity="bottom"/>

    </RelativeLayout>

</LinearLayout>