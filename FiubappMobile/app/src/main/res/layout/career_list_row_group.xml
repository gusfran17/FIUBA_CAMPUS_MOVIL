<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/career_header"
        android:background="#ff2ec7e8">
        <TextView
            android:id="@+id/lbl_career_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:text="Carrera X"/>

        <ImageView
            android:id="@+id/img_delete_career"
            android:src="@drawable/ic_basura"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/career_header"
        android:background="#ff2ec7e8">

        <TextView
            android:id="@+id/lbl_progress_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usted tiene X creditos aprobados de 240"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/career_progressBar"
            android:layout_below="@+id/lbl_progress_description"
            android:progress="50"
            android:progressTint="#ff2ec7e8"
            android:secondaryProgressTint="#ff2ec7e8"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

</RelativeLayout>